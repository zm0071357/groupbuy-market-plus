<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="groupbuy.market.plus.infrastructure.dao.GroupBuyTeamOrderDao">

    <resultMap id="dataMap" type="groupbuy.market.plus.infrastructure.dao.po.GroupBuyTeamOrder">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="team_id" property="teamId"/>
        <result column="order_id" property="orderId"/>
        <result column="activity_id" property="activityId"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="goods_id" property="goodsId"/>
        <result column="source" property="source"/>
        <result column="channel" property="channel"/>
        <result column="original_price" property="originalPrice"/>
        <result column="deduction_price" property="deductionPrice"/>
        <result column="pay_price" property="payPrice"/>
        <result column="is_header" property="isHeader"/>
        <result column="status" property="status"/>
        <result column="out_trade_no" property="outTradeNo"/>
        <result column="biz_id" property="bizId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="groupbuy.market.plus.infrastructure.dao.po.GroupBuyTeamOrder">
        insert into group_buy_team_order(
            user_id, team_id, order_id, activity_id, start_time,
            end_time, goods_id, source, channel, original_price,
            deduction_price, pay_price, is_header, status, out_trade_no, biz_id, create_time, update_time
        )
        values(
                  #{userId}, #{teamId}, #{orderId}, #{activityId}, #{startTime},
                  #{endTime}, #{goodsId}, #{source}, #{channel}, #{originalPrice},
                  #{deductionPrice}, #{payPrice}, #{isHeader}, #{status}, #{outTradeNo}, #{bizId}, now(), now()
              )
    </insert>

    <select id="checkUserTakeActivityCount" parameterType="groupbuy.market.plus.infrastructure.dao.po.GroupBuyTeamOrder" resultType="java.lang.Integer">
        select count(id) from group_buy_team_order
        where user_id = #{userId} and activity_id = #{activityId}
    </select>

    <select id="checkUserTakeTeamCount" parameterType="groupbuy.market.plus.infrastructure.dao.po.GroupBuyTeamOrder" resultType="java.lang.Integer">
        select count(id) from group_buy_team_order
        where user_id = #{userId} and team_id = #{teamId}
    </select>

    <select id="getNoPayLockOrderByOutTradeNo" resultMap="dataMap" parameterType="groupbuy.market.plus.infrastructure.dao.po.GroupBuyTeamOrder">
        select user_id, team_id, order_id, activity_id, start_time,
               end_time, goods_id, source, channel, original_price, deduction_price, status
        from group_buy_team_order
        where user_id = #{userId} and out_trade_no = #{outTradeNo} and status = 0
    </select>

</mapper>
